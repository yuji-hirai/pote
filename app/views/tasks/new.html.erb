<h2>スケジュール新規作成</h2>
	<%= render "shared/error", obj: @task %>
<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_time ,"開始日" %></th>
            <td><%= f.text_field :start_time %></td>
        </tr>
        <tr>
            <th><%= f.label :end_time ,"終了日" %></th>
            <td><%= f.text_field :end_time %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td><%= f.check_box :all_day %></td>
        </tr>
         <tr>
            <th><%= f.label :content ,"スケジュールメモ" %></th>
            <td><%= f.text_area :content %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュールを新規登録する"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>